@* @model List<CapaTours.Models.ToursModel> *@

<div class="row px-5">
	<div class="col-12">
		<div class="row">
			<div class="col-6">
				<div class="display-3 px-0">Reservas</div>
				<div class="text-muted px-0 ">Aquí puede encontrar todas las reservas que ha realizado previamente.</div>
				<br>
			</div>
		</div>

		<div class="row mt-3 mb-2"></div>
		<div class="row">
			<div class="col-12 px-0">
				<div class="table-responsive shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572f; border-radius: 10px;">
					<table id="example" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Columna #1</th>
								<th>Columna #2</th>
								<th>Columna #3</th>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody>
							@*Aquí van los resultados del query *@
							<tr>
								<td>"Ejemplo"</td>
								<td>"Ejemplo"</td>
								<td>"Ejemplo"</td>
								<td class="text-center">

									@* Abrir una nueva vista con un form para pagar la reserva *@
									<a class="btn btn-sm" style="background-color: #7B9C36; color:white" asp-controller="" asp-action="">
										<i class="fa fa-credit-card"></i> Pagar Reserva
									</a>

									@* Este SOLO se debe mostrar cuando el estado de la reserva pasa a "Completado" *@
									<a class="btn btn-sm" style="background-color: #7B9C36; color:white" asp-controller="Resennas" asp-action="CrearResenna">
										<i class="fa fa-star"></i> Añadir Reseña
									</a>

									@* Este se debe esconder cuando el estado de la reserva pasa a "Completado" *@
									<button class="btn btn-sm btn-danger me-1" data-bs-toggle="modal" data-bs-target="#anularReservaModal">
										<i class="fa-regular fa-circle-xmark"></i> Anular Reserva
									</button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

@* Modal de Anular Reserva *@
<div class="modal fade" id="anularReservaModal" tabindex="-1" aria-labelledby="anularReservaModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="anularReservaModalLabel">Confirmar Anulación</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>¿Está seguro de que desea anular esta reserva? Esta acción no se puede deshacer.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
				<button type="button" class="btn btn-danger">Anular</button>
			</div>
		</div>
	</div>
</div>

@* DataTable *@
<script>
	$(document).ready(function () {

		$("#example").DataTable({
			language: {
				url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-ES.json',
			},
			responsive: true,
			columnDefs: [
				{
					targets: [2],
					className: 'text-center'
				}
			],
			order: [[0, 'desc']]
		});

	});
</script>