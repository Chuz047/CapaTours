@* @model List<CapaTours.Models.ReservasModel> *@

<div class="row px-5">
	<div class="col-12 px-0">
		<div class="row mx-1 mb-4">
			<div class="display-3 px-0 col-12">Reservas</div>
			<div class="text-muted px-0">Para realizar una nueva reserva, solo presione modal de "Nueva Reserva" y complete la información requerida.</div>
		</div>

		<div class="row mt-3 mb-2"></div>
		<div class="row">
			<div class="col-12 px-0">
				<div class="table-responsive shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572f; border-radius: 10px;">
					<table id="example" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody>
							@*Aquí van los resultados del query *@
							<tr>
								<td class="text-center">
									<button class="btn btn-sm" style="background-color: #7B9C36; color: white" data-bs-toggle="modal" data-bs-target="#realizarReservaModal">
										<i class="fas fa-tag"></i> Nueva Reserva
									</button>
									<a href="@Url.Action("Listado2", "Reservas")" class="btn btn-sm" style="background-color: #7B9C36; color:white">
										<i class="fas fa-eye"></i> Listado de Reservas
									</a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="realizarReservaModal" tabindex="-1" aria-labelledby="realizarReservaModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="realizarReservaModalLabel">Confirmar Reserva</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<label for="realizarReservaInput" class="form-label">Ingrese la cantidad de personas:</label>
					<input type="number" class="form-control" id="realizarReservaInput" placeholder="Ejemplo: 3">
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
					<button type="button" class="btn" style="background-color:#44572f; color:white" id="confirmarReservaBtn">Confirmar</button>
				</div>
			</div>
		</div>
	</div>
</div>