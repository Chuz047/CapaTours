@* @model List<CapaTours.Models.ToursModel> *@

<div class="row px-5">
	<div class="col-12 px-0">
		<div class="row mx-1 mb-4">
			<div class="col-auto">
				<a href="@Url.Action("Listado", "Tours")" class="btn btn-secondary btn-sm">
					<i class="fa-solid fa-arrow-left"></i> Regresar
				</a>
			</div>
		</div>

		<!-- Encabezado -->
		<div class="row mx-1 mb-4">
			<div class="display-3 px-0 col-12">Creación de Tour</div>
			<div class="text-muted px-0">Complete el formulario para agregar un nuevo tour al sistema.</div>
		</div>

		<!-- Contenedor del Formulario -->
		<div class="mt-4 p-5 rounded shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572F;">

			<form asp-action="CrearTour" asp-controller="Tours">

				<h5 class="text mt-4">Información del Tour</h5>
				<hr>
				<div class="row g-3 mt-2">
					<!-- Nombre -->
					<div class="col-md-6">
						<div class="form-floating">
							<label>Nombre</label>
							<input type="text" class="form-control input-lg" @*asp-for="Nombre"*@ placeholder="Nombre" required>
						</div>
					</div>
					<!-- Destino -->
					<div class="col-md-6">
						<div class="form-floating">
							<label>Destino</label>
							<input type="text" class="form-control input-lg" @*asp-for="Destino"*@ placeholder="Destino" required>
						</div>
					</div>
				</div>
				<div class="row g-3 mt-2">
					<!-- Precio -->
					<div class="col-md-6">
						<div class="form-floating">
							<label>Precio</label>
							<input type="number" class="form-control input-lg" @*asp-for="Precio"*@ placeholder="Precio" required>
						</div>
					</div>
					<!-- Capacidad -->
					<div class="col-md-6">
						<div class="form-floating">
							<label>Capacidad</label>
							<input type="number" class="form-control input-lg" @*asp-for="Capacidad"*@ placeholder="Capacidad" required>
						</div>
					</div>
				</div>
				<div class="row g-3 mt-2">
					<!-- Fecha de Inicio -->
					<div class="col-md-6">
						<div class="form-floating">
							<label>Fecha de Inicio</label>
							<input type="date" class="form-control input-lg" @*asp-for="FechaInicio"*@ placeholder="Fecha de Inicio" required>
						</div>
					</div>
					<!-- Fecha de Fin -->
					<div class="col-md-6">
						<div class="form-floating">
							<label>Fecha de Fin</label>
							<input type="date" class="form-control input-lg" @*asp-for="FechaFin"*@ placeholder="Fecha de Fin" required>
						</div>
					</div>
				</div>
				<!-- Descripción -->
				<div class="row g-3 mt-2">
					<div class="col-md-12">
						<div class="form-floating">
							<label>Descripción</label>
							<input type="text" class="form-control input-lg" @*asp-for="Descripcion"*@ placeholder="Descripcion" required>
						</div>
					</div>
				</div>
				<!-- Itinerario -->
				<div class="row g-3 mt-2">
					<div class="col-md-12">
						<div class="form-floating">
							<label>Itinerario</label>
							<input type="text" class="form-control input-lg" @*asp-for="Itinerario"*@ placeholder="Itinerario" required>
						</div>
					</div>
				</div>
				<h5 class="text mt-4">Imágenes del Tour</h5>
				<hr>
				<!-- Imágenes -->
				<div class="row g-3 mt-2">
					<div class="col-md-12">
						<label for="Imagenes" class="form-label text-muted">Subir imágenes</label>
						<input type="file" class="form-control" id="Imagenes" name="Imagenes" multiple>
					</div>
				</div>

				<!-- Botón Guardar -->
				<div class="row g-2 mt-4">
					<div class="col-md">
						<button type="submit" class="btn btn-success w-100" style="background-color: #44572f">
							<i class="fa-solid fa-square-check"></i> Guardar Paquete
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>