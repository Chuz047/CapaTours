@* @model CapaTours.Models.ToursModel *@

<div class="row px-5">
	<div class="col-12 px-0">
		<div class="row mx-1 mb-4">
			<div class="col-auto">
				<a class="btn btn-secondary btn-sm" asp-controller="Tours" asp-action="ListadoAdmin">
					<i class="fa-solid fa-arrow-left"></i> Regresar
				</a>
			</div>
		</div>

		<div class="row mx-1 mb-4">
			<div class="display-3 px-0 col-12">Editar Tour</div>
			<div class="text-muted px-0">Modifique los datos del tour y guarde los cambios.</div>
		</div>

		<div class="mt-4 p-5 rounded shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572F;">

			@*  <form asp-action="ActualizarTour" asp-controller="Tours" method="post">
                <input type="hidden" asp-for="Id" /> *@

			<h5 class="text mt-4">Información del Tour</h5>
			<hr>
			<div class="row g-3 mt-2">
				<div class="col-md-6">
					<div class="form-floating">
						<label>Nombre</label>
						<input type="text" class="form-control input-lg" @* asp-for="Nombre" *@ required>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating">
						<label>Destino</label>
						<input type="text" class="form-control input-lg" @* asp-for="Destino" *@ required>
					</div>
				</div>
			</div>

			<div class="row g-3 mt-2">
				<div class="col-md-6">
					<div class="form-floating">
						<label>Precio</label>
						<input type="number" class="form-control input-lg" @* asp-for="Precio" *@ required>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating">
						<label>Capacidad</label>
						<input type="number" class="form-control input-lg" @* asp-for="Capacidad" *@ required>
					</div>
				</div>
			</div>

			<div class="row g-3 mt-2">
				<div class="col-md-6">
					<div class="form-floating">
						<label>Fecha de Inicio</label>
						<input type="date" class="form-control input-lg" @* asp-for="FechaInicio" *@ required>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-floating">
						<label>Fecha de Fin</label>
						<input type="date" class="form-control input-lg" @* asp-for="FechaFin" *@ required>
					</div>
				</div>
			</div>

			<div class="row g-3 mt-2">
				<div class="col-md-12">
					<div class="form-floating">
						<label>Descripción</label>
						<input type="text" class="form-control input-lg"@*  asp-for="Descripcion" *@ required>
					</div>
				</div>
			</div>

			<div class="row g-3 mt-2">
				<div class="col-md-12">
					<div class="form-floating">
						<label>Itinerario</label>
						<input type="text" class="form-control input-lg" @* asp-for="Itinerario" *@ required>
					</div>
				</div>
			</div>

			<h5 class="text mt-4">Imágenes del Tour</h5>
			<hr>
			<div class="row g-3 mt-2">
				<div class="col-md-12">
					<label for="Imagenes" class="form-label text-muted">Subir nuevas imágenes</label>
					<input type="file" class="form-control" id="Imagenes" name="Imagenes" multiple>
				</div>
			</div>

			<div class="row g-2 mt-4">
				<div class="col-md">
					<button type='button' class='btn w-100' style='background-color: #44572F; color: white;'>
						<i class='fa-solid fa-check'></i> Editar Tour
					</button>
				</div>
			</div>
			@* </form> *@
		</div>
	</div>
</div>
