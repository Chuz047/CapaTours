@* @model List<CapaTours.Models.UsuarioModel>*@

<div class="row px-5">
	<div class="col-12">
		<div class="row">
			<div class="col-6">
				<div class="display-3 px-0">Clientes</div>
				<div class="text-muted px-0 ">Listado de todos los clientes registrados en el sistema.</div>
				<br>
			</div>
		</div>


		<div class="row mt-3 mb-2"></div>
		<div class="row">
			<div class="col-12 px-0">
				<div class="table-responsive shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572f; border-radius: 10px;">
					<table id="example" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Identificación</th>
								<th>Nombre</th>
								<th>Correo</th>
								<th>Estado</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								@foreach (var item in Model)
								{
								<tr>
									<td>@item.Identificacion</td>
									<td>@item.Nombre</td>
									<td>@item.Correo</td>
									 <td>
									<td>
												@if (item.Estado)
												{
											<span class="badge bg-success">Activo</span>
												}
												else
												{
											<span class="badge bg-danger">Inactivo</span>
												}
									</td>
									<td>
												@if (item.Estado)
												{
											<form method="post" action="@Url.Action("DesactivarUsuario", "Clientes")" class="d-inline">
												<input type="hidden" name="usuarioID" value="@item.UsuarioID" />
												<button type="submit" class="btn btn-sm btn-danger me-1">
													<i class="fa-solid fa-user-slash"></i> Desactivar Cuenta
												</button>
											</form>
												}
												else
												{
											<form method="post" action="@Url.Action("ActivarUsuario", "Clientes")" class="d-inline">
												<input type="hidden" name="usuarioID" value="@item.UsuarioID" />
												<button type="submit" class="btn btn-sm btn-success me-1">
													<i class="fa-solid fa-user-check"></i> Activar Cuenta
												</button>
											</form>
												}
									</td>
								</tr>
								}
							
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>
</div>




@* Data Table *@
<script>
	$(document).ready(function () {

		$("#example").DataTable({
			language: {
				url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-ES.json',
			},
			responsive: true,
			columnDefs: [
				{
					targets: [2],
					className: 'text-center'
				}
			],
			order: [[0, 'desc']]
		});

	});
</script>