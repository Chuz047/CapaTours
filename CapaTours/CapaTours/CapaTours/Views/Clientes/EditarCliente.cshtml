@* @model List<CapaTours.Models.ClientesModel>*@

<div class="row px-5">
    <div class="col-12 px-0">
        <div class="row mx-1 mb-4">
            <div class="col-auto">
                <a href="@Url.Action("Listado", "Clientes")" class="btn btn-secondary btn-sm">
                    <i class="fa-solid fa-arrow-left"></i> Regresar
                </a>
            </div>
        </div>

        <div class="row mx-1 mb-4">
            <div class="display-3 px-0 col-12">Editar Cliente</div>
            <div class="text-muted px-0">Modifique los datos del cliente y guarde los cambios.</div>
        </div>

        <div class="mt-4 p-5 rounded shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572F;">

            @*  <form asp-action="ActualizarCliente" asp-controller="Clientes" method="post">
            <input type="hidden" asp-for="Id" /> *@

            <h5 class="text mt-4">Información del Cliente</h5>
            <hr>
            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <div class="form-floating">
                        <label>Identificacion</label>
                        <input type="text" class="form-control input-lg" @* asp-for="Identificacion" *@ required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label>Nombre</label>
                        <input type="text" class="form-control input-lg" @* asp-for="Nombre" *@ required>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <div class="form-floating">
                        <label>Apellido Paterno</label>
                        <input type="text" class="form-control input-lg" @* asp-for="ApellidoPaterno" *@ required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label>Apellido Materno</label>
                        <input type="text" class="form-control input-lg" @* asp-for="ApellidoMaterno" *@ required>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <div class="form-floating">
                        <label>Correo Electrónico</label>
                        <input type="text" class="form-control input-lg" @* asp-for="CorreoElectronico" *@ required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <label>Contraseña</label>
                        <input type="date" class="form-control input-lg" @* asp-for="Contrasenna" *@ required>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-12">
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="si" @*asp-for="TieneContrasennaTemp"*@ value="true" required>
                        <label for="si">Sí</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="no" @*asp-for="TieneContrasennaTemp"*@ value="false" required>
                        <label for="no">No</label>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-2">
                <div class="col-md-12">
                    <div class="form-floating">
                        <label>Fecha de Vencimiento Temporal</label>
                        <input type="date" class="form-control input-lg" @* asp-for="FechaVencimientoTemp" *@ required>
                    </div>
                </div>
            </div>

            <div class="row g-2 mt-4">
                <div class="col-md">
                    <button type="submit" class="btn btn-success w-100" style="background-color: #44572f">
                        <i class="fa-solid fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </div>
            @* </form> *@
        </div>
    </div>
</div>
