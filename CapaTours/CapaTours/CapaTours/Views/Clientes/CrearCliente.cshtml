@* @model List<CapaTours.Models.ClientesModel>*@

<div class="row px-5">
    <div class="col-12 px-0">
        <div class="row mx-1 mb-4">
            <div class="col-auto">
                <a href="@Url.Action("Listado", "Clientes")" class="btn btn-secondary btn-sm">
                    <i class="fa-solid fa-arrow-left"></i> Regresar
                </a>
            </div>
        </div>

        <!-- Encabezado -->
        <div class="row mx-1 mb-4">
            <div class="display-3 px-0 col-12">Creación de Cliente</div>
            <div class="text-muted px-0">Complete el formulario para agregar un nuevo cliente al sistema.</div>
        </div>

        <!-- Contenedor del Formulario -->
        <div class="mt-4 p-5 rounded shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572F;">

            <form asp-action="CrearCliente" asp-controller="Clientes">

                <h5 class="text mt-4">Información de Cliente</h5>
                <hr>
                <div class="row g-3 mt-2">
                    <!-- Indetificacion -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Indetificación</label>
                            <input type="text" class="form-control input-lg" @*asp-for="Identificacion"*@ placeholder="Identificación" required>
                        </div>
                    </div>
                    <!-- Nombre -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Nombre</label>
                            <input type="text" class="form-control input-lg" @*asp-for="Nombre"*@ placeholder="Nombre" required>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <!-- ApellidoPaterno -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Apellido Paterno</label>
                            <input type="text" class="form-control input-lg" @*asp-for="ApellidoPaterno"*@ placeholder="Apellido Paterno" required>
                        </div>
                    </div>
                    <!-- ApellidoMaterno -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Apellido Materno</label>
                            <input type="text" class="form-control input-lg" @*asp-for="ApellidoMaterno"*@ placeholder="Apellido Materno" required>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <!-- Correo -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Correo Electrónico</label>
                            <input type="text" class="form-control input-lg" @*asp-for="Correo"*@ placeholder="Correo Electrónico" required>
                        </div>
                    </div>
                    <!-- Contrasenna -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Contraseña</label>
                            <input type="text" class="form-control input-lg" @*asp-for="Contrasenna"*@ placeholder="Contraseña" required>
                        </div>
                    </div>
                </div>
                <div class="row g-3 mt-2">
                    <!-- TieneContrasennaTemp -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>¿Tiene Contraseña Temporal?</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="si" @*asp-for="TieneContrasennaTemp"*@ value="si" required>
                                <label for="si">Sí</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="no" @*asp-for="TieneContrasennaTemp"*@ value="no" required>
                                <label for="no">No</label>
                            </div>
                        </div>
                    </div>
                    <!-- FechaVencimientoTemp -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <label>Fecha de Vencimiento Temporal</label>
                            <input type="date" class="form-control input-lg" @*asp-for="FechaVencimientoTemp"*@ placeholder="Fecha de Vencimiento Temporal" required>
                        </div>
                    </div>
                </div>

                <!-- Botón Guardar -->
                <div class="row g-2 mt-4">
                    <div class="col-md">
                        <button type="submit" class="btn - btn-success w-100" style="background-color: #44572f">
                            <i class="fa-solid fa-square-check"></i> Guardar Cliente
                        </button>
                    </div>
                </div>
            </form>
    </div>
</div>