@using CapaTours.Models
@model UsuarioModel

@{
    ViewData["Title"] = "Recuperar Contraseña";
    Layout = "_LayoutExterno";
}

<body style="background-color: #B9C9A4;">
    <div class="cards-autenticacion">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card-autenticacion o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image" style="background-image: url('/img/backgrounds/recuperarcontrasenna.jpg');"></div>

                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Recuperar Contraseña</h1>
                                        <h1 class="h6 text-gray-600 mb-4">Ingrese su correo y le enviaremos un código.</h1>
                                    </div>

                                    @if (ViewBag.Msj != null)
                                    {
                                        <div class="alert alert-danger text-center">@ViewBag.Msj</div>
                                    }
                                    @if (TempData["Msj"] != null)
                                    {
                                        <div class="alert alert-success text-center">@TempData["Msj"]</div>
                                    }

                                    <form asp-action="RecuperarContrasenna" asp-controller="Autenticacion" method="post">
                                        <div class="form-group">
                                            <input asp-for="Correo" class="form-control input-lg" placeholder="Correo" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block" style="background-color: #44572f;">
                                            Enviar Código
                                        </button>
                                    </form>

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Login","Autenticacion")" style="color: #44572f;">Volver al inicio de sesión</a>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
