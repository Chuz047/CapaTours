@* @model List<CapaTours.Models.ToursModel> *@

<div class="row px-5">
    <div class="col-12">
        <div class="row">
            <div class="col-6">
                <div class="display-3 px-0">Tours</div>
                <div class="text-muted px-0 ">Aquí puede ver nuestros tours disponbiles.</div>
                <br>
            </div>
        </div>
        <div class="row mt-3 mb-2"></div>
        <div class="row">
            <div class="col-12 px-0">
                <div class="col-12">
                    <div class="row" id="itemList">

                        <div class="col-3 mb-4 item-card" data-name="Item 1" data-id="1">
                            <div class="card card-hover card-with-border">
                                <img src="/img/Tours/playa.jpg" alt="Tour 1 Imagen" class="img-thumbnail">
                                <div class="card-body">
                                    <h5 class="card-title">Tour #1</h5>
                                    <p class="card-text"><i class="fa-solid fa-location-dot"></i> Ubicación</p>
                                    <a class="btn" style="background-color: #7B9C36; color:white" asp-controller="ToursCliente" asp-action="DetallesTour"><i class="fas fa-eye"></i> Detalles</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-3 mb-4 item-card" data-name="Item 2" data-id="2">
                            <div class="card card-hover card-with-border">
                                <img src="/img/Tours/montaña.jpg" alt="Tour 2 Imagen" class="img-thumbnail">
                                <div class="card-body">
                                    <h5 class="card-title">Tour #2</h5>
                                    <p class="card-text"><i class="fa-solid fa-location-dot"></i> Ubicación</p>
                                    <a class="btn" style="background-color: #7B9C36; color:white" asp-controller="ToursCliente" asp-action="DetallesTour"><i class="fas fa-eye"></i> Detalles</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-3 mb-4 item-card" data-name="Item 3" data-id="2">
