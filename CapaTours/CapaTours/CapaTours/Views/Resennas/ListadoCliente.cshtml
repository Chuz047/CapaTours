@* @model List<CapaTours.Models.ToursModel> *@

<div class="row px-5">
	<div class="col-12">
		<div class="row">
			<div class="col-6">
				<div class="display-3 px-0">Reseñas</div>
				<div class="text-muted px-0 ">Aquí puede encontrar todas las reseñas que ha realizado previamente.</div>
				<br>
			</div>
		</div>

		<div class="row mt-3 mb-2"></div>
		<div class="row">
			<div class="col-12 px-0">
				<div class="table-responsive shadow-lg" style="background-color: #f9f9f9; border-left: 5px solid #44572f; border-radius: 10px;">
					<table id="example" class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Título</th>
								<th>Calificación</th>
								<th>Acciones</th>
							</tr>
						</thead>
						<tbody>
							@*Aquí van los resultados del query *@
							<tr>
								<td>"Ejemplo"</td>
								<td>"Ejemplo"</td>
								<td class="text-center">
									<a href="@Url.Action("EditarResenna", "Resennas")" class="btn btn-sm" style="background-color: #7B9C36; color:white">
										<i class="fas fa-edit"></i>  Editar Reseña
									</a>
									<button class="btn btn-sm btn-danger me-1" data-bs-toggle="modal" data-bs-target="#anularResennaModal">
										<i class="fa-regular fa-circle-xmark"></i> Eliminar Reseña
									</button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

@* Modal de Eliminar Reseña *@
<div class="modal fade" id="anularResennaModal" tabindex="-1" aria-labelledby="anularResennaModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="anularResennaModalLabel">Confirmar Eliminación</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>¿Está seguro de que desea eliminar esta reseña? Esta acción no se puede deshacer.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
				<button type="button" class="btn btn-danger">Eliminar</button>
			</div>
		</div>
	</div>
</div>

@* DataTable *@
<script>
	$(document).ready(function () {

		$("#example").DataTable({
			language: {
				url: '//cdn.datatables.net/plug-ins/2.1.8/i18n/es-ES.json',
			},
			responsive: true,
			columnDefs: [
				{
					targets: [2],
					className: 'text-center'
				}
			],
			order: [[0, 'desc']]
		});

	});
</script>
